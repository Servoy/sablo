{
  "name": "sablo-unit-test-module",
  "description": "A module that bundles karma depenencies needed to tun karma for sablo",
  "dependencies": {
    "@chiragrupani/karma-chromium-edge-launcher": "^2.4.1",
    "jasmine-core": "~5.2.0",
    "karma": "^6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "^2.2.1",
    "karma-firefox-launcher": "~2.1.3",
    "karma-ie-launcher": "~1.0.0",
    "karma-jasmine": "^5.1.0",
    "karma-junit-reporter": "~2.0.1",
    "karma-ng-html2js-preprocessor": "~1.0.0",
    "typescript": "~5.5.4"
  },
  "scripts": {
    "build": "tsc",
    "test": "karma start ./client_tests/karma.conf.js --browsers ChromeHeadless",
    "test_watch": "karma start ./client_tests/karma_run_on_file_change.conf.js",
    "test_edge_nowatch": "karma start ./client_tests/karma.conf.js --browsers EdgeHeadless"
  }
}
